            <td>
                @Html.DisplayFor(modelItem => item.AdresaKupca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Količina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KonacnaCijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Partner.PartnerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Spremnik.SpremnikId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NarudzbaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NarudzbaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NarudzbaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
