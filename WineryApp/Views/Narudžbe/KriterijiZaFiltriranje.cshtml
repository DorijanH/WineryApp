@model WineryApp.ViewModels.Narudžbe.NarudžbeViewModel

    <form id="filterform" asp-action="Filter" method="post" class="p-1">
        <h5 class="text-center mt-2">Filter</h5>
        <hr />
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.PartnerId"></label>
            <select asp-for="Filter.PartnerId" class="form-control"
                    asp-items="ViewBag.Partneri">
                <option selected value="">Odaberite kupca</option>
                <option value="0">Privatan kupac</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.StatusNarudžbe"></label>
            <select asp-for="Filter.StatusNarudžbe" class="form-control" id="statusSelect">
                <option selected value="">Odaberite status</option>
                <option value="0">Naručeno</option>
                <option value="1">Isporučeno</option>
                <option value="2">Plaćeno</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.SpremnikId"></label>
            <select asp-for="Filter.SpremnikId" class="form-control"
                    asp-items="ViewBag.Spremnici">
                <option selected value="">Odaberite spremnik</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.NarudžbaOd"></label>
            <input asp-for="Filter.NarudžbaOd" class="form-control" id="narudžbaOd" />
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.NarudžbaDo"></label>
            <input asp-for="Filter.NarudžbaDo" class="form-control" id="narudžbaDo" />
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.IsporukaOd"></label>
            <input asp-for="Filter.IsporukaOd" class="form-control" id="isporukaOd" />
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.IsporukaDo"></label>
            <input asp-for="Filter.IsporukaDo" class="form-control" id="isporukaDo" />
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.NaplataOd"></label>
            <input asp-for="Filter.NaplataOd" class="form-control" id="naplataOd" />
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.NaplataDo"></label>
            <input asp-for="Filter.NaplataDo" class="form-control" id="naplataDo" />
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-sm btn-primary fas fa-filter"> Filtriraj</button>
        </div>
    </form>
