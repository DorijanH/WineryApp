@model WineryApp.ViewModels.Spremnici.SpremniciViewModel

    <form id="filterform" asp-action="Filter" method="post" class="p-1">
        <h5 class="text-center mt-2">Filter</h5>
        <hr />
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.VrstaSpremnikaId"></label>
            <select asp-for="Filter.VrstaSpremnikaId" class="form-control"
                    asp-items="ViewBag.VrsteSpremnika">
                <option selected value="">Odaberite vrstu spremnika</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.PodrumId"></label>
            <select asp-for="Filter.PodrumId" class="form-control"
                    asp-items="ViewBag.Podrumi">
                <option selected value="">Odaberite podrum</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.BerbaId"></label>
            <select asp-for="Filter.BerbaId" class="form-control"
                    asp-items="ViewBag.Berbe">
                <option selected value="">Odaberite godinu berbe</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.PunilacId"></label>
            <select asp-for="Filter.PunilacId" class="form-control"
                    asp-items="@Model.Zaposlenici.Select(i => new SelectListItem(i.Ime + " " + i.Prezime, i.ZaposlenikId.ToString()))">
                <option selected value="">Odaberite punilaca</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.SortaVinaId"></label>
            <select asp-for="Filter.SortaVinaId" class="form-control"
                    asp-items="ViewBag.Sorte">
                <option selected value="">Odaberite sortu vina</option>
            </select>
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-sm btn-primary fas fa-filter"> Filtriraj</button>
        </div>
    </form>
