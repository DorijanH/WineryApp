@*@using WineryApp.Data
@model WineryApp.ViewModels.Spremnici.SpremniciViewModel
@inject IRepository Repository

@{
    ViewData["Title"] = "Spremnici";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var allSpremnici = Repository.GetAllSpremnici();
}

@if (allSpremnici.Count == 0)
{
<div class="alert alert-dismissible alert-warning">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p class="mb-0">
        Još nemate unesen niti jedan spremnik! Kliknite na '+Dodaj spremnik' za početak rada!
    </p>
</div>
}

@if (TempData["Uspješno"] != null)
{
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p class="mb-0">@TempData["Uspješno"]</p>
</div>
}

@if (TempData["Neuspješno"] != null)
{
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <p class="mb-0">@TempData["Neuspješno"]</p>
</div>
}

<br />
<h1 class="d-flex justify-content-center">Spremnici</h1>
<hr />

<button type="button" class="btn btn-primary m-3" data-toggle="modal" data-target="#DodajSpremnikModal">
    +Dodaj spremnik
</button>

<div class="container">
    <div class="form-group row">
        <div class="col-sm-10">

            <div class="modal fade" id="DodajSpremnikModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h4 class="modal-title">Dodaj spremnik</h4>
                        </div>

                        <div class="modal-body">
                            <form id="dodajSpremnikForm" asp-controller="Spremnici" asp-action="DodajSpremnik" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="PodrumInput.ŠifraPodruma"></label>
                                    <input asp-for="PodrumInput.ŠifraPodruma" class="form-control" />
                                    <span asp-validation-for="PodrumInput.ŠifraPodruma" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PodrumInput.Lokacija"></label>
                                    <input asp-for="PodrumInput.Lokacija" class="form-control" />
                                    <span asp-validation-for="PodrumInput.Lokacija" class="text-danger"></span>
                                </div>
                            </form>
                        </div>

                        <div class="modal-footer">
                            <button type="submit" form="dodajSpremnikForm" class="btn btn-outline-primary">Dodaj spremnik</button>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Odustani</button>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Podrumi.Count != 0)
            {
            <div class="container-fluid blur-box">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Šifra podruma</th>
                            <th>Popunjenost</th>
                            <th>Broj spremnika</th>
                            <th>Lokacija</th>
                            <th>Berbe</th>
                            <th>Sorte vina</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var podrum in Model.Podrumi)
                            {
                                var allSpremnici = Repository.GetAllSpremnici(podrum);
                                var brojSpremnika = podrum.Spremnik.Count;
                                var popunjenost = Repository.GetBasementFill(podrum);
                                var vintagesFormatted = Repository.GetAllVingatesFormatted(podrum);
                                var varientalsFormatted = Repository.GetAllVarientalsFormatted(podrum);

                        <tr style="cursor: pointer" onclick="location.href = '@Url.Action("Details", "Podrumi", new {id = podrum.PodrumId})'">
                            <td>@podrum.ŠifraPodruma</td>
                            <td>@popunjenost</td>
                            <td>@brojSpremnika</td>
                            <td>@podrum.Lokacija</td>
                            <td>@vintagesFormatted</td>
                            <td>@varientalsFormatted</td>
                            <td class="text-right">
                                <div class="btn-group">
                                    <a class="btn btn-sm pt-2 fas fa-pen nounderline" asp-action="Edit" asp-route-id="@podrum.PodrumId"></a>
                                    <form id="deleteForm" asp-action="Delete" method="post">
                                        <input type="hidden" name="id" value="@podrum.PodrumId" />
                                        <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši">
                                            <i class="fas fa-trash-alt" style="color: white"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                            }
                    </tbody>
                </table>
            </div>
            }
        </div>
        <div class="col-sm-2 blur-box">
            <partial name="KriterijiZaFiltriranje" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ŠifraSpremnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kapacitet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Napunjenost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FazaIzrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Berba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Podrum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Punilac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SortaVina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VrstaSpremnika)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ŠifraSpremnika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kapacitet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Napunjenost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FazaIzrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Berba.BerbaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Podrum.PodrumId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Punilac.KorisnickoIme)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortaVina.SortaVinaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VrstaSpremnika.VrstaSpremnikaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpremnikId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpremnikId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpremnikId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>*@
