@model WineryApp.ViewModels.Izvješća.Zadaci.IzvješćaZadaciIViewModel

@{
    ViewData["Title"] = "Izvješća - Zadaci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="form-group row">

        <div class="col-2 blur-box">
            <div class="p-2">
                <br />
                <br />
                <br />
                <a style="color: black" asp-action="Zadaci"><h5 class="text-center mt-2"><b><i>Zadaci</i></b></h5></a>
                <br />
                <a style="color: black" asp-action="Zaposlenici"><h5 class="text-center mt-2">Zaposlenici</h5></a>
                <br />
                <a style="color: black" asp-action="Podrumi"><h5 class="text-center mt-2">Podrumi</h5></a>
                <br />
                <a style="color: black" asp-action="Spremnici"><h5 class="text-center mt-2">Spremnici</h5></a>
                <br />
                <a style="color: black" asp-action="Aditivi"><h5 class="text-center mt-2">Aditivi</h5></a>
                <br />
                <a style="color: black" asp-action="UzorciZaAnalizu"><h5 class="text-center mt-2">Uzorci za analizu</h5></a>
            </div>
        </div>
        
        <div class="col-1"></div>

        <div class="col-9">
            <div class="container-fluid blur-box">
                <form id="izvješćeForm" asp-action="GenerirajIzvješćeZadaci" method="post" class="p-1">
                    <div class="row">
                        <div class="col-6 p-2">
                            <h4 class="text-left">Format:</h4>
                        </div>

                        <div class="col-3 p-2">
                            <div class="custom-radio">
                                <label class="form-check-label">
                                    <input asp-for="Input.Format" type="radio" class="form-check-input" value="1">
                                    <h4>PDF</h4>
                                </label>
                            </div>
                        </div>
                        <div class="col-3 p-2">
                            <div class="custom-radio">
                                <label class="form-check-label">
                                    <input asp-for="Input.Format" type="radio" class="form-check-input" value="2">
                                    <h4>Excel</h4>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="ml-2" asp-for="Input.ZaposlenikId"></label>
                        <select asp-for="Input.ZaposlenikId" class="form-control"
                                asp-items="@Model.Zaposlenici.Select(i => new SelectListItem(i.Ime + ' ' + i.Prezime, i.ZaposlenikId.ToString()))">
                            <option selected value="-1">Svi</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="ml-2" asp-for="Input.StatusId"></label>
                        <select asp-for="Input.StatusId" class="form-control">
                            <option value="0">U tijeku</option>
                            <option value="1">Završeno</option>
                            <option selected value="-1">Svi</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="ml-2" asp-for="Input.KategorijaZadatkaId"></label>
                        <select asp-for="Input.KategorijaZadatkaId" class="form-control"
                                asp-items="@Model.KategorijeZadataka.Select(i => new SelectListItem(i.ImeKategorije, i.KategorijaZadatkaId.ToString()))">
                            <option selected value="-1">Sve</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="ml-2" asp-for="Input.PodrumId"></label>
                        <select asp-for="Input.PodrumId" class="form-control"
                                asp-items="@Model.Podrumi.Select(i => new SelectListItem(i.ŠifraPodruma, i.PodrumId.ToString()))">
                            <option selected value="-1">Svi</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="ml-2" asp-for="Input.SpremnikId"></label>
                        <select asp-for="Input.SpremnikId" class="form-control"
                                asp-items="@Model.Spremnici.Select(i => new SelectListItem(i.ŠifraSpremnika, i.SpremnikId.ToString()))">
                            <option selected value="-1">Svi</option>
                        </select>
                    </div>
                    <div class="form-group row">
                        <label class="ml-2" asp-for="Input.PočetakZadatka"></label>
                        <input asp-for="Input.PočetakZadatka" class="form-control" />
                    </div>
                    <div class="form-group row">
                        <label class="ml-2" asp-for="Input.RokZadatka"></label>
                        <input asp-for="Input.RokZadatka" class="form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <button type="submit" class="btn btn-sm btn-primary">Izradi izvješće</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>