@using WineryApp.Data
@using WineryApp.Data.Entiteti
@model WineryApp.Data.Entiteti.Zaposlenik
@inject IRepository Repository

@{
    ViewData["Title"] = "Detalji zaposlenika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid blur-box">
    <br />
    <h1 class="text-center">Detalji</h1>

    <div>
        <h4 class="text-center">Zaposlenik @Model.Ime @Model.Prezime</h4>
        <hr/>
            <dl class="row">    
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Prezime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Prezime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Spol)
                </dt>
                <dd class="col-sm-10">
                    @Model.Spol
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Adresa)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Adresa)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Grad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Grad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefon)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefon)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Lozinka)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Lozinka)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DatumZaposlenja)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DatumZaposlenja)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.KorisnickoIme)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.KorisnickoIme)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Uloga)
                </dt>
                <dd class="col-sm-10">
                    @Model.Uloga.NazivUloga
                </dd>
            </dl>
    </div>

    <div class="row justify-content-center">
        <h4>Popis zadataka</h4>
        <br/>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Naziv zadatka</th>
                <th>Vrsta zadatka</th>
                <th>Početak zadatka</th>
                <th>Rok zadatka</th>
                <th>Status zadatka</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var zadatakId in Model.Zadatak)
            {
                var zadatak = Repository.GetZadatak(zadatakId.ZadatakId);
                var status = zadatak.StatusZadatka.Value == (int) StatusZadatka.UTijeku ? "U tijeku" : "Zavrseno";
                <tr>
                    <td>@zadatak.ImeZadatka</td>
                    <td>@zadatak.KategorijaZadatka.ImeKategorije</td>
                    <td>@($"{zadatak.PočetakZadatka:d/M/yyyy}")</td>
                    <td>@($"{zadatak.RokZadatka:d/M/yyyy}")</td>
                    <td>@status</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <a class="btn btn-sm pt-2 fas fa-pen nounderline" asp-controller="Zadaci" asp-action="Edit" asp-route-id="@zadatak.ZadatakId"></a>
                            <form id="deleteForm" asp-controller="Zadaci" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@zadatak.ZadatakId"/>
                                <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši">
                                    <i class="fas fa-trash-alt" style="color: white"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-between p-3">
        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.ZaposlenikId">Uredi zaposlenika</a>
        <a class="btn btn-outline-danger" asp-action="Index">Natrag</a>
    </div>
</div>
