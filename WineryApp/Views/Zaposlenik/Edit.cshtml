@model WineryApp.Data.Entiteti.Zaposlenik

@{
    ViewData["Title"] = "Uređivanje zaposlenika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid blur-box">
    <div class="row">
        <div class="col-md-12">
            <br/>
            <div class="row justify-content-between">
                <div>
                    <h2 class="ml-3">@Model.Uloga @Model.Ime @Model.Prezime</h2>
                    <h4 class="ml-3">Uređivanje</h4>
                </div>
                <div>
                    <button type="submit" form="uređivanjeZaposlenikaForm" class="btn btn-outline-primary">Izmjeni</button>
                    <a asp-action="Nazad" asp-route-returnUrl="@ViewBag.returnUrl" class="btn btn-outline-danger mr-3">Nazad</a>
                </div>
            </div>
            <form id="uređivanjeZaposlenikaForm" asp-action="Edit" asp-route-returnUrl="@ViewBag.returnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ZaposlenikId"/>
                <table class="table">
                    <tbody>
                    <tr class="form-group">
                        <td>
                            <label asp-for="Ime" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Ime" class="form-control"/>
                            <span asp-validation-for="Ime" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="Prezime" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Prezime" class="form-control"/>
                            <span asp-validation-for="Prezime" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="Spol" class="control-label"></label>
                        </td>
                        <td>
                            <select asp-for="Spol" class="form-control">
                                <option disabled selected value="">Odaberite spol</option>
                                <option value="Muško">Muško</option>
                                <option value="Žensko">Žensko</option>
                            </select>
                            <span asp-validation-for="Spol" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="Adresa" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Adresa" class="form-control"/>
                            <span asp-validation-for="Adresa" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="Grad" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Grad" class="form-control"/>
                            <span asp-validation-for="Grad" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="Telefon" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Telefon" class="form-control"/>
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="Email" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="Lozinka" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="Lozinka" class="form-control"/>
                            <span asp-validation-for="Lozinka" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="DatumZaposlenja" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="DatumZaposlenja" class="form-control"/>
                            <span asp-validation-for="DatumZaposlenja" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="KorisnickoIme" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="KorisnickoIme" class="form-control"/>
                            <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr class="form-group">
                        <td>
                            <label asp-for="UlogaId" class="control-label"></label>
                        </td>
                        <td>
                            <select asp-for="UlogaId" class="form-control" asp-items="ViewBag.UlogaId"></select>
                            <span asp-validation-for="UlogaId" class="text-danger"></span>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>