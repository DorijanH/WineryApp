@model WineryApp.ViewModels.Podrumi.PodrumiIndexModel

    <form id="filterform" asp-action="Filter" method="post" class="p-1">
        <h5 class="text-center mt-2">Filter</h5>
        <hr />
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.BerbaId"></label>
            <select asp-for="Filter.BerbaId" class="form-control"
                    asp-items="ViewBag.Berbe">
                <option selected value="">Odaberite berbu</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.SortaVinaId"></label>
            <select asp-for="Filter.SortaVinaId" class="form-control"
                    asp-items="ViewBag.Sorte">
                <option selected value="">Odaberite sortu</option>
            </select>
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-sm btn-primary fas fa-filter"> Filtriraj</button>
        </div>
    </form>
