@model WineryApp.ViewModels.RezultatiAnalize.RezultatAnalizeViewModel

    <form id="filterform" asp-action="Filter" method="post" class="p-1">
        <h5 class="text-center mt-2">Filter</h5>
        <hr />
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.PodrumId"></label>
            <select asp-for="Filter.PodrumId" class="form-control" id="podrumSelect"
                    asp-items="ViewBag.Podrumi">
                <option selected value="">Odaberite podrum</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.SpremnikId"></label>
            <select asp-for="Filter.SpremnikId" class="form-control" id="spremnikSelect">
                <option selected value="">Odaberite spremnik</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.UzorakUzeoId"></label>
            <select asp-for="Filter.UzorakUzeoId" class="form-control"
                    asp-items="@Model.Zaposlenici.Select(i => new SelectListItem(i.Ime + " " + i.Prezime, i.ZaposlenikId.ToString()))">
                <option selected value="">Odaberite zaposlenika</option>
            </select>
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.DatumOd"></label>
            <input asp-for="Filter.DatumOd" class="form-control" />
        </div>
        <div class="form-group row">
            <label class="ml-2" asp-for="Filter.DatumDo"></label>
            <input asp-for="Filter.DatumDo" class="form-control" />
        </div>
        <div class="row justify-content-center">
            <button type="submit" class="btn btn-sm btn-primary fas fa-filter"> Filtriraj</button>
        </div>
    </form>
