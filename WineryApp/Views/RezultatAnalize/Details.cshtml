@model WineryApp.Data.Entiteti.RezultatAnalize

@{
    ViewData["Title"] = "Detalji analize";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid blur-box">
    <br />

    <div class="row justify-content-between">
        <div>
            <h2 class="ml-3">Analiza @Model.ŠifraUzorka</h2>
            <h4 class="ml-3">@Model.Spremnik.SortaVina.NazivSorte</h4>
        </div>
        <div>
            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.RezultatAnalizeId" asp-route-returnUrl="@Context.Request.Path.ToString()">Uredi</a>
            <a class="btn btn-outline-danger mr-3" asp-action="Nazad" asp-route-returnUrl="@ViewBag.returnUrl">Natrag</a>
        </div>
    </div>

    <hr />

    <dl class="row">
        <dt class="col-2">Datum analize uzorka:</dt>
        <dd class="col-2">@Model.DatumUzimanjaUzorka.ToString("dd.MM.yyyy")</dd>
    </dl>

    <hr />

    <dl class="row">
        <dt class="col-2">Šifra podruma:</dt>
        <dd class="col-2">@Model.Spremnik.Podrum.ŠifraPodruma</dd>
        <dt class="col-2">Šifra spremnika:</dt>
        <dd class="col-2">@Model.Spremnik.ŠifraSpremnika</dd>
        <dt class="col-2">Uzorak uzeo:</dt>
        <dd class="col-2">@Model.UzorakUzeo.Ime @Model.UzorakUzeo.Prezime</dd>
    </dl>

    <hr />

    <div class="row justify-content-center">
        <h4>Rezultat</h4>
        <br />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Ph vrijednost</th>
                    <th>Šećer</th>
                    <th>Rezidualni šećer</th>
                    <th>Slobodni sumpor</th>
                    <th>Ukupni sumpor</th>
                    <th>Kiselina</th>
                    <th>Alkohol</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var ph = Model.PhVrijednost.Value + " pH";
                    var šećer = Model.Šećer.Value + " g/L";
                    var rezŠećer = Model.RezidualniŠećer.Value + " g/L";
                    var slobSump = Model.SlobodniSumpor.Value + " mg/L";
                    var ukSump = Model.UkupniSumpor.Value + " mg/L";
                    var kiselina = Model.Kiselina.Value + " g/L";
                    var alkohol = Model.PostotakAlkohola.Value + " %";
                }

                <tr>
                    <td>@ph</td>
                    <td>@šećer</td>
                    <td>@rezŠećer</td>
                    <td>@slobSump</td>
                    <td>@ukSump</td>
                    <td>@kiselina</td>
                    <td>@alkohol</td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr />
</div>