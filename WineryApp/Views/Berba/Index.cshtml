@model IEnumerable<WineryApp.Data.Entiteti.Berba>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Uspješno"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p class="mb-0">@TempData["Uspješno"]</p>
    </div>
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GodinaBerbe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GodinaBerbe)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BerbaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BerbaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BerbaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
