@model WineryApp.Data.Entiteti.Berba

@{
    ViewData["Title"] = "Uređivanje berbe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container blur-box">
    <div class="row">
        <div class="col-md-12">
            <br/>
            <div class="row justify-content-between">
                <div>
                    <h2 class="ml-3">Berba @Model.GodinaBerbe</h2>
                    <h4 class="ml-3">Uređivanje</h4>
                </div>
                <div>
                    <button type="submit" form="uređivanjeBerbeForm" class="btn btn-outline-primary">Izmjeni</button>
                    <a asp-action="Nazad" asp-route-returnUrl="@ViewBag.returnUrl" class="btn btn-outline-danger mr-3">Nazad</a>
                </div>
            </div>

            <form id="uređivanjeBerbeForm" asp-action="Edit" asp-route-returnUrl="@ViewBag.returnUrl">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BerbaId"/>
                <table class="table">
                    <tbody>
                    <tr class="form-group">
                        <td>
                            <label asp-for="GodinaBerbe" class="control-label"></label>
                        </td>
                        <td>
                            <input asp-for="GodinaBerbe" class="form-control"/>
                            <span asp-validation-for="GodinaBerbe" class="text-danger"></span>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>